<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="90000500" id="com.bitpay.wallet" ios-CFBundleVersion="9.0.5" version="9.0.5" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>BitPay</name>
    <description>
      Secure Bitcoin Wallet
    </description>
    <author email="support@bitpay.com" href="https://bitpay.com">
        BitPay Inc.
    </author>
    <content src="index.html" />
    <access origin="https://bws.bitpay.com" />
    <access origin="https://bitpay.com" />
    <access origin="https://test.bitpay.com" />
    <access origin="https://staging.bitpay.com" />

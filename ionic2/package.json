{
  "name": "copay",
  "author": "BitPay",
  "homepage": "http://bitpay.com/",
  "private": true,
  "scripts": {
    "install": "yarn run install:simserver && yarn run install:wallet",
    "install:simserver": "cd tools/simserver && yarn",
    "install:wallet": "cd src/plugins/wallet && yarn",
    "postinstall": "ionic state restore && webdriver-manager update",
    "ionic:build": "ionic-app-scripts build",
    "ionic:serve": "ionic-app-scripts serve",
    "e2e": "protractor",
    "test": "ng test",
    "test-coverage": "ng test --watch=false --code-coverage",
    "travis-serve": "http-server www -p 8100",
    "send-coverage": "cat coverage/lcov.info | ./node_modules/.bin/codecov",
    "start": "concurrently --kill-others --prefix '[{name}]' --names 'MAIN,SIMSERV,STARTER,WALLET' -c 'white.bgBlack,white.bgGreen,white.bgYellow,white.bgBlue' 'npm run start:main' 'npm run start:simserver' 'npm run start:starter' 'npm run start:wallet'",
    "start:main": "ionic serve --port 8110 --livereload-port 35730 --dev-logger-port 53710",
    "start:simserver": "cd tools/simserver && npm start",
    "start:starter": "cd src/plugins/starter && ionic serve --nobrowser --port 8111 --livereload-port 35731 --dev-logger-port 53711",
    "start:wallet": "cd src/plugins/wallet && ionic serve --nobrowser --port 8112 --livereload-port 35732 --dev-logger-port 53712"
  },
  "dependencies": {
    "@angular/common": "2.1.1",
    "@angular/compiler": "2.1.1",
    "@angular/compiler-cli": "2.1.1",
    "@angular/core": "2.1.1",
    "@angular/forms": "2.1.1",
    "@angular/http": "2.1.1",
    "@angular/platform-browser": "2.1.1",
    "@angular/platform-browser-dynamic": "2.1.1",
    "@angular/platform-server": "2.1.1",
    "@ionic/storage": "1.1.6",
    "@types/cordova-plugin-qrscanner": "^1.0.29",
    "angular2-logger": "^0.5.1",
    "bitcore-wallet-client": "^4.4.0",
    "cordova-plugin-qrscanner": "^2.4.0",
    "http-server": "^0.9.0",
    "ionic-angular": "2.0.0-rc.3",
    "ionic-native": "2.2.3",
    "ionicons": "3.0.0",
    "rxjs": "5.0.0-beta.12",
    "zone.js": "0.6.26"
  },
  "devDependencies": {
    "@ionic/app-scripts": "0.0.46",
    "@types/jasmine": "2.5.37",
    "angular-cli": "1.0.0-beta.20-1",
    "codelyzer": "~0.0.26",
    "concurrently": "^3.1.0",
    "cordova": "^6.4.0",
    "ionic": "^2.1.14",
    "jasmine-core": "2.5.2",
    "jasmine-spec-reporter": "2.7.0",
    "karma": "1.3.0",
    "karma-chrome-launcher": "2.0.0",
    "karma-cli": "1.0.1",
    "karma-jasmine": "1.0.2",
    "karma-mocha-reporter": "2.2.0",
    "karma-remap-istanbul": "0.2.1",
    "protractor": "4.0.10",
    "protractor-jasmine2-screenshot-reporter": "0.3.2",
    "ts-node": "1.6.1",
    "tslint": "3.15.1",
    "tslint-eslint-rules": "2.1.0",
    "typescript": "2.0.7"
  },
  "cordovaPlugins": [
    "cordova-plugin-device",
    "cordova-plugin-console",
    "cordova-plugin-whitelist",
    "cordova-plugin-splashscreen",
    "cordova-plugin-statusbar",
    "ionic-plugin-keyboard"
  ],
  "cordovaPlatforms": [],
  "description": "A secure bitcoin wallet platform for both desktop and mobile devices."
}
